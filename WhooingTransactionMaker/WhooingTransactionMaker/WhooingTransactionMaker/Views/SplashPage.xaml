<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhooingTransactionMaker.Views.SplashPage">
    <ContentPage.Content>
        <RelativeLayout>

            <WebView x:Name="LoginView" 
                     IsVisible="False"
                     Navigating="WebViewNavigating"
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height,Factor=.15,Constant=0}"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=.8,Constant=0}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=.8,Constant=0}"/>

            <Label x:Name="LoadingStatus" Text="Loading" />
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>